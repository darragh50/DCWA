<h1>Students</h1>
<!--Links-->
<a href="/students/add">Add Student</a><br>
<a href="/">Home</a>

<!--Table design -->
<table border="1" cellspacing="2" cellpadding="5">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% students.forEach(function(student) { %>
      <tr>
        <td><%= student.sid %></td>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td>
          <a href="/students/edit/<%= student.sid %>">Update</a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
